<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="塔吉克斯坦中国新疆边境地区发生6.7级左右地震"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/home_fragment_description"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#地震快讯#中国地震台网正式测定：06月26日19时17分在吉尔吉斯斯坦（北纬39"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_fragment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/home_fragment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>