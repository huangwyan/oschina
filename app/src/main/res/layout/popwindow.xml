<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="文字"
            android:layout_weight="1"
            android:textColor="#f5080808"
            android:drawableTop="@drawable/share_icon_copy"
            android:button="@null"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#f5080808"
            android:drawableTop="@drawable/share_icon_more"
            android:button="@null"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="拍照"
            android:layout_weight="1"
            android:textColor="#f5080808"
            android:drawableTop="@drawable/share_icon_qq"
            android:button="@null"/>
    </RadioGroup>

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="语音"
            android:textColor="#f5080808"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_icon_sinaweibo_a"
            android:button="@null"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#f5080808"
            android:drawableTop="@drawable/share_icon_wechat_a"
            android:button="@null"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="便签"
            android:layout_weight="1"
            android:textColor="#f5080808"
            android:drawableTop="@drawable/share_icon_wechatfriends"
            android:button="@null"/>
    </RadioGroup>

</LinearLayout>